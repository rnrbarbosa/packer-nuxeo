        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ]
    }
  ]
},
{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/base.sh",
            "scripts/vagrant.sh",
            "scripts/virtualbox.sh",
            "scripts/nuxeo.sh",
            "scripts/cleanup.sh",
            "scripts/zerodisk.sh"
          ]
        }
      }
    }
  ],
  "post-processors": [
	{
	      "type": "vagrant",
      "override": {
        "virtualbox": {
          "output": "nuxeo-8.3-ubuntu-1604-x64.box"
        }
      }
    }
  ],
}
